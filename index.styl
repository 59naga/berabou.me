// Mixins
edgy()
  meyer-reset()

  body
    font-family 'PixelMplus12'
    
    color #333
    background-color white

  li:nth-of-type(2n)
    color #333
    background-color #dadada

  h1
    font-size 700%
  h2
    font-size 400%
  h3
    font-size 300%
  h4
    font-size 300%
  h5
    font-size 200%
  p
  pre
    font-size smaller
  
  pre
    white-space pre-line
    word-break break-word
  
  img
  svg
    margin 0 .5em
    vertical-align middle
  
  figure
    svg
    img
      width 100%
    
  a
    pointer()
  
  nav
    a
      display block

pointer()
  display block

  color inherit
  text-decoration none
  
  cursor pointer
  cursor hand
  
  transition opacity .5s ease-out
  opacity 1
  &:hover
    opacity .5

fig()
  display flex
  figure
    flex 1
  figcaption
    flex 2

// Main

edgy()

// Layout of states

.index
  padding-bottom 10em
  
  header
    fixed false false 0
    opacity .5
    padding 0 .5em

  ul
    list-style-type none
    li
      padding .5em 1em
      
      section
        fig()
        figcaption
          padding 0 1em
          h2
            overflow ellipsis
            padding-bottom .1em // Fix overflowed font
      
      aside
        text-align right
      
  footer
    text-align right
    padding .5em
    
    a
      display inline
      margin-left 1em
    img
      margin 0
      height 2em
