// Mixins
edgy()
  meyer-reset()

  body
    font-family 'PixelMplus12',monospace
    
    color #333
    background-color white

  h1
    font-family 'misaki_gothic',monospace
    
    font-size 700%
  h2
    font-size 400%
  h3
    font-size 300%
  h4
    font-size 300%
  h5
    font-size 200%
  p
  pre
    font-size smaller
  
  pre
    white-space pre-line
    word-break break-word
  
  img
  svg
    margin 0 .5em
    vertical-align middle
  
  figure
    svg
    img
      width 100%
    
  a
    pointer()
  
  nav
    a
      display block

pointer()
  display block

  color inherit
  text-decoration none
  
  cursor pointer
  cursor hand
  
  transition opacity .5s ease-out
  opacity 1
  &:hover
    opacity .5

fig()
  display flex
  figure
    flex 1
  figcaption
    flex 2

// Main

edgy()

// Layout of states

.index
  padding-bottom 10em
  box-sizing-reset()
  
  header
    fixed false false 0
    opacity .5
    padding 0 .5em

  ul
    display block
    width 100%
    list-style-type none
    li
      padding .5em 1em
      
      section
        fig()
        figcaption
          padding 0 1em
          h2
            overflow ellipsis
            padding-bottom .1em // Fix overflowed font
      
      aside
        text-align right
    
    li
      oddColor()
        color #333
        background-color #dadada
      
      +media-query( all, max-width 961px)
        &:nth-of-type(2n)
          oddColor()

      +media-query( all, min-width 960px )
        &:nth-of-type(2)
        &:nth-of-type(3)
        &:nth-of-type(6)
        &:nth-of-type(7)
        &:nth-of-type(10)
          oddColor()

        display inline-block
        vertical-align middle
        
        padding 5em 2em
        
        width 50vw
        min-height unit(50/1.618,'vw')
      
  footer
    text-align right
    padding .5em
    
    background-color #77B57C
    
    a
      display inline
      margin-left 1em
    img
      margin 0
      height 2em
